<idea-plugin>
    <id>hdzi.idea-editstarters-plugin</id>
    <name>EditStarters</name>
    <vendor email="taojinhou@qq.com" url="http://github.com/hdzitao">HdziTao</vendor>

    <description><![CDATA[
    <p>添加修改spring boot starter.</p>
    <p/>
    <p>Add or modify spring boot starters.</p>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>com.intellij.gradle</depends>
    <depends>org.intellij.groovy</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <projectService serviceImplementation="com.github.hdzitao.editstarters.initializr.CachePersistentComponent"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="EditStarters.MavenButton" class="com.github.hdzitao.editstarters.ui.MavenButtonAction"
                text="Edit Starters"
                description="Edit maven spring boot starters" icon="/icons/button.png">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
        </action>
        <action id="EditStarters.GradleButton" class="com.github.hdzitao.editstarters.ui.GradleButtonAction"
                text="Edit Starters"
                description="Edit gradle spring boot starters" icon="/icons/button.png">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>